    <script>
        // Configuración global de Chart.js
        Chart.defaults.font.family = "'Segoe UI', Tahoma, Geneva, Verdana, sans-serif";
        
        // Gráfico ODS
        const odsCtx = document.getElementById('odsChart').getContext('2d');
        new Chart(odsCtx, {
            type: 'doughnut',
            data: {
                labels: [
                    'ODS 8 - Trabajo decente (45%)',
                    'ODS 5 - Igualdad de género (15%)',
                    'ODS 10 - Reducción desigualdades (12%)',
                    'ODS 3 - Salud y bienestar (10%)',
                    'ODS 1 - Fin de la pobreza (8%)',
                    'ODS 4 - Educación de calidad (5%)',
                    'Otros ODS (5%)'
                ],
                datasets: [{
                    data: [45, 15, 12, 10, 8, 5, 5],
                    backgroundColor: [
                        '#FF6384',
                        '#36A2EB',
                        '#FFCE56',
                        '#4BC0C0',
                        '#9966FF',
                        '#FF9F40',
                        '#C9CBCF'
                    ],
                    borderWidth: 2,
                    borderColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            padding: 15,
                            font: {
                                size: 11
                            }
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return context.label;
                            }
                        }
                    }
                }
            }
        });

        // Gráfico de actuaciones por área
        const actuacionesCtx = document.getElementById('actuacionesChart').getContext('2d');
        new Chart(actuacionesCtx, {
            type: 'bar',
            data: {
                labels: ['Relaciones Laborales', 'Seguridad y Salud', 'Seguridad Social', 'Empleo y Extranjería'],
                datasets: [{
                    label: 'Número de actuaciones (miles)',
                    data: [218, 187, 156, 63],
                    backgroundColor: [
                        'rgba(102, 126, 234, 0.8)',
                        'rgba(118, 75, 162, 0.8)',
                        'rgba(237, 100, 166, 0.8)',
                        'rgba(144, 19, 254, 0.8)'
                    ],
                    borderColor: [
                        'rgba(102, 126, 234, 1)',
                        'rgba(118, 75, 162, 1)',
                        'rgba(237, 100, 166, 1)',
                        'rgba(144, 19, 254, 1)'
                    ],
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return value + 'k';
                            }
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return context.parsed.y + '.000 actuaciones';
                            }
                        }
                    }
                }
            }
        });

        // Gráfico de evolución
        const evolucionCtx = document.getElementById('evolucionChart').getContext('2d');
        new Chart(evolucionCtx, {
            type: 'line',
            data: {
                labels: ['2019', '2020', '2021', '2022', '2023', '2024*'],
                datasets: [{
                    label: 'Expedientes tramitados (miles)',
                    data: [485, 420, 512, 554, 621, 624],
                    fill: true,
                    borderColor: 'rgb(102, 126, 234)',
                    backgroundColor: 'rgba(102, 126, 234, 0.1)',
                    tension: 0.3,
                    pointRadius: 5,
                    pointBackgroundColor: 'rgb(102, 126, 234)',
                    pointBorderColor: '#fff',
                    pointBorderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: false,
                        min: 400,
                        ticks: {
                            callback: function(value) {
                                return value + 'k';
                            }
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                let label = context.parsed.y + '.000 expedientes';
                                if (context.label === '2024*') {
                                    label += ' (proyectado)';
                                }
                                return label;
                            }
                        }
                    }
                }
            }
        });

        // Gráfico de objetivos del Plan Estratégico
        const objetivosCtx = document.getElementById('objetivosChart').getContext('2d');
        new Chart(objetivosCtx, {
            type: 'polarArea',
            data: {
                labels: [
                    'Eje 1: Calidad del empleo',
                    'Eje 2: Capacidad de actuación',
                    'Eje 3: Modernización',
                    'Eje 4: Cooperación internacional'
                ],
                datasets: [{
                    data: [12, 11, 13, 4],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.6)',
                        'rgba(54, 162, 235, 0.6)',
                        'rgba(255, 206, 86, 0.6)',
                        'rgba(75, 192, 192, 0.6)'
                    ],
                    borderWidth: 2,
                    borderColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            padding: 15,
                            font: {
                                size: 11
                            }
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return context.label + ': ' + context.parsed.r + ' objetivos';
                            }
                        }
                    }
                }
            }
        });

        // Gráfico de tipos de inspección
        const tipoInspeccionCtx = document.getElementById('tipoInspeccionChart').getContext('2d');
        new Chart(tipoInspeccionCtx, {
            type: 'horizontalBar',
            data: {
                labels: [
                    'Prevención de riesgos',
                    'Contratos irregulares',
                    'Registro horario',
                    'Igualdad y discriminación',
                    'Trabajo infantil',
                    'Altas temperaturas'
                ],
                datasets: [{
                    label: 'Inspecciones realizadas',
                    data: [35420, 28650, 22180, 15340, 890, 9255],
                    backgroundColor: 'rgba(118, 75, 162, 0.7)',
                    borderColor: 'rgba(118, 75, 162, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                indexAxis: 'y',
                scales: {
                    x: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return value.toLocaleString('es-ES');
                            }
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return context.parsed.x.toLocaleString('es-ES') + ' inspecciones';
                            }
                        }
                    }
                }
            }
        });

        // Gráfico de impacto de campañas
        const campanasCtx = document.getElementById('campanasChart').getContext('2d');
        new Chart(campanasCtx, {
            type: 'radar',
            data: {
                labels: [
                    'Contratos convertidos a indefinidos',
                    'Infracciones detectadas',
                    'Altas de oficio',
                    'Empresas asesoradas',
                    'Mediaciones realizadas',
                    'Planes de igualdad revisados'
                ],
                datasets: [{
                    label: '2023',
                    data: [85, 72, 95, 68, 45, 62],
                    fill: true,
                    backgroundColor: 'rgba(102, 126, 234, 0.2)',
                    borderColor: 'rgb(102, 126, 234)',
                    pointBackgroundColor: 'rgb(102, 126, 234)',
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: 'rgb(102, 126, 234)'
                }, {
                    label: '2024 (proyectado)',
                    data: [92, 78, 98, 75, 52, 71],
                    fill: true,
                    backgroundColor: 'rgba(255, 99, 132, 0.2)',
                    borderColor: 'rgb(255, 99, 132)',
                    pointBackgroundColor: 'rgb(255, 99, 132)',
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: 'rgb(255, 99, 132)'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    r: {
                        beginAtZero: true,
                        max: 100,
                        ticks: {
                            stepSize: 20
                        }
                    }
                },
                plugins: {
                    legend: {
                        position: 'bottom'
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return context.dataset.label + ': ' + context.parsed.r + '% de efectividad';
                            }
                        }
                    }
                }
            }
        });
    </script>
